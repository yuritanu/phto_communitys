.header-top
  .header-menu
    %p.title  Photo　Ring　Community
    
    %ul.header-menu__list
      
      %li.header-menu__list__categorie
        -# カテゴリーつける     
        .categorie
          %p.categorie-t community
          
          %ul.categorie-list
            %li.parent-list
              = link_to '親',"#", class:"parent-list__link"
            %li.parent-list
              = link_to '親',"#", class:"parent-list__link"
