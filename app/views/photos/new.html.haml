.top
  = render '/tops/header'

  .photos-list
    .photos-list__img
      .form-list
        = form_for [@photo] do |f|
          -# 画像選択
          = f.file_field :image, class: "file_btn"
          -# 画像のタイトル        
          = f.text_field :name, class: "photos-list__title", placeholder: 'Photoタイトル'
          -#  投稿ボタン
          = f.submit "Photo投稿", class: "form-btn" 
  .footer
    = render '/tops/footer'
